{
  "name": "i-helper-frontend",
  "version": "1.0.0",
  "description": "i-Helper Frontend",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc -p tsconfig.electron.json -w",
    "dev:react": "cross-env BROWSER=none react-scripts start",
    "build": "npm run build:electron && npm run build:react",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:react": "react-scripts build",
    "package": "electron-builder build --mac --win --linux -c.extraMetadata.main=dist/main/main.js --publish never"
  },
  "build": {
    "appId": "com.yourcompany.i-helper",
    "productName": "i-Helper",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "axios": "^0.24.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1"
  }
}